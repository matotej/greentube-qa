{
    "default": {
        "paths": [
            "src/tests/features/*.feature"
        ], 
        "dryRun": false,
        "format": [
            "progress-bar",
            "summary",
            "json:reports/cucumber-report.json",
            "html:reports/cucumber-report.html",
            "rerun:@rerun.txt"
        ],
        "formatOptions": {
            "colorsEnabled": true,
            "snippetInterface": "async-await"
        },
        "require": [
            "src/tests/step-definitions/*.ts",
            "src/hooks/hooks.ts"
        ],
        "requireModule": [
            "ts-node/register"
        ],
        "parallel": 1
    }
}